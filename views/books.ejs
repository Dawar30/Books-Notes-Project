<%- include("partials/header.ejs") %>

  <div class="book-details-container">
    <div class="book-details-card">
      <img src="<%= book.cover_url %>" alt="<%= book.title %> cover" />

      <div class="book-info">
        <h2>
          <%= book.title %>
        </h2>
        <p><strong>Author:</strong>
          <%= book.author %>
        </p>
        <p><strong>Recomendation:</strong> <%= book.rating || 0 %>/5</p>
        <form action="/books/<%= book.id %>/delete" method="POST"
          onsubmit="return confirm('Are you sure you want to delete this book?');">
          <button type="submit" class="delete-btn">Delete Book</button>
        </form>
      </div>
    </div>

    <div class="notes">
      <p><strong>Notes:</strong>
        <%= book.notes || "No notes yet" %>
      </p>
    </div>

    <!-- Update Form -->
    <div class="update-form">
      <h3>Edit Notes & Rating</h3>
      <form action="/books/<%= book.id %>/update" method="POST" class="edit-form">
        <label for="notes">Notes:</label>
        <textarea id="notes" name="notes"><%= book.notes %></textarea>

        <label for="rating">Recomendation:</label>
        <input type="number" id="rating" name="rating" min="1" max="5" value="<%= book.rating %>" placeholder="Out of 5">

        <button type="submit">Update</button>
      </form>

    </div>

    <!-- Delete -->
  </div>

  <%- include("partials/footer.ejs") %>