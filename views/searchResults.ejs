<%- include("partials/header.ejs") %>
<h2>Search Results</h2>
<div class="books-grid">
    <% if(books.length == 0) { %>
        <h3>No book found!</h3>
    <% } %>
  <% books.forEach(book => { %>
    <div class="book-card">
      <img src="https://covers.openlibrary.org/b/id/<%= book.cover_i %>-M.jpg" alt="Cover">
      <h3><%= book.title %></h3>
      <p><%= book.author_name ? book.author_name[0] : "Unknown Author" %></p>
      <form action="/add" method="POST">
        <input type="hidden" name="title" value="<%= book.title %>">
        <input type="hidden" name="author" value="<%= book.author_name ? book.author_name[0] : 'Unknown' %>">
        <input type="hidden" name="cover_url" value="https://covers.openlibrary.org/b/id/<%= book.cover_i %>-M.jpg">
        <button type="submit">Add</button>
      </form>
    </div>
  <% }) %>
</div>
<%- include("partials/footer.ejs") %>
